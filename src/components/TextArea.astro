---
interface Props {
    id: string;
    label: string;
    placeholder?: string;
    readonly?: boolean;
    value?: string;
}

const { id, label, placeholder = "", readonly = false, value = "" } = Astro.props;
---
<label for={id}>
    <span class="title"> {label} </span>
    <span class="description" id={`${id}-counter`}></span>

    <textarea
        id={id}
        placeholder={placeholder}
        readonly={readonly}
        value={value}></textarea>
</label>

<style>
    textarea {
        resize: none;
        border: 1px solid #ccc;
        border-radius: .5rem;
        padding: 8px 14px;
        margin: 4px 0 0 0;
        font-size: 14px;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        font-family: "JetBrains Mono", monospace;
        width: -webkit-fill-available;
        height: 31vh;
        transition: box-shadow 0.3s ease;
    }
    textarea:focus {
        outline: none;
        box-shadow: 0 0 0 2px #ccc;
    }
</style>